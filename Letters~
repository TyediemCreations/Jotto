//package view;

import javax.swing.*;
import java.awt.event.*;
import java.text.NumberFormat;
import java.awt.Color;
import javax.swing.table.DefaultTableModel;
import javax.swing.table.AbstractTableModel;

//helper Window displays all letters in a grid, if a letter is selected, changes colour
public class helperWindow extends JPanel{
	private JTable letters = new JTable(6,5);	

	/*
	private DefaultTableModel tableModel = new DefaultTableModel(){
		public boolean isCellEditable(int row, int column){
			return false;
		}
	};
	*/

	public helperWindow(){
		this.layoutView();
		this.registerControllers();

		//letters.setModel(tableModel);

		int alphabet = (int) 'A';
		for (int i=0;i<6;i++){
			for (int j=0;j<5;j++){
				if (i==5 && j>0) break;
				letters.setValueAt((char) alphabet, i, j);
				alphabet++;
			}
		}
		
	}

	private void layoutView() {
		this.setLayout(new FormLayout());
		this.add(letters);
		
	}
	///*
	private void registerControllers() {
		this.letters.addMouseListener(new MouseAdapter() {
			public void mouseClicked(MouseEvent evt) {
				int row = letters.getSelectedRow();
				int column = letters.getSelectedColumn();
				if (letters.getValueAt(row,column) == ""){
					int alphabet = (int) 'A';
					alphabet += 5*row + column;
					letters.setValueAt((char) alphabet, row, column);
				}
				else letters.setValueAt("", row, column);
				//letters.setSelectionBackground(Color.green);
			}
		});
	}
	//*/
}
